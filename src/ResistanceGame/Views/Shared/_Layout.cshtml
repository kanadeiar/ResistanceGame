<!DOCTYPE html>
<html lang="ru-ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResistanceGame</title>
    <partial name="Partial/_StylesPartial" />
    @await RenderSectionAsync("Styles", false)
    <base href="~/" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Сопротивление</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container-fluid bg-secondary text-dark">
            &copy; 2024 - Сопротивление
        </div>
    </footer>

    <partial name="Partial/_ScriptsPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
